{
  "manifest_version": 2,
  "name": "BetterIntra",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs",
	  "https://*.intra.42.fr/*"
  ],

  "browser_action": {
    "default_popup": "generic/popup/popup.html"
  },

  "description": "A simple browser extension enabling quality of life features for 42's intranet.",

  "icons": {
    "32": "img/icon32.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.intra.42.fr/*"],
      "css": ["generic/style.css"],
      "js": ["generic/lib/findAndReplaceDOMText.js", "generic/nicknamer.js"],
      "run_at": "document_end"
    }
  ],

  "browser_specific_settings": {
  "gecko": {
    "id": "betterintra@mpouillo",
    "strict_min_version": "58.0"
    }
  }
}
