{
  "manifest_version": 2,
  "name": "BetterIntra",
  "description": "Quality of life features for 42's intranet.",
  "version": "1.0.1",
  "permissions": [
    "storage",
    "https://*.intra.42.fr/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "betterintra@mpouillo",
      "data_collection_permissions": {
        "required": ["none"]
      },
      "strict_min_version": "58.0"
    }
  },

  "icons": {
    "32": "img/icon32.png"
  },

  "browser_action": {
    "default_icon": "img/icon32.png",
    "default_title": "BetterIntra Settings",
    "default_popup": "generic/popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.intra.42.fr/*"
      ],
      "js": [
        "generic/lib/findAndReplaceDOMText.js",
        "generic/storage-helper.js",
        "generic/nicknamer.js",
        "generic/custom-background.js"
      ],
      "css": [
        "generic/style.css"
      ],
      "run_at": "document_start"
    }
  ]
}
